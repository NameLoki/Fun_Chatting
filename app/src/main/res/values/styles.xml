<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="TextFont" parent="android:Widget.DeviceDefault.TextView">
        <item name="fontFamily">@font/text_font</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="EditTextFont" parent="android:Widget.DeviceDefault.EditText">
        <item name="fontFamily">@font/text_font</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ButtonTextFont" parent="android:Widget.DeviceDefault.Button.Borderless">
        <item name="fontFamily">@font/text_font</item>
        <item name="android:background">@color/black</item>
        <item name="android:textColor">@color/white</item>

    </style>
    <style name="ChattingNameText" parent="TextFont">
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ChattingMessageText" parent="TextFont">
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/border_chatting</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingStart">10dp</item>
    </style>
    <style name="RoomNameText" parent="TextFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="RoomMessageText" parent="TextFont">
    </style>
    <style name="FriendNameText" parent="TextFont">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="FriendMessageText" parent="TextFont">
    </style>
    <style name="TitleText" parent="TextFont">

    </style>
</resources>